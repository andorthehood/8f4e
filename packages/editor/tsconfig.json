{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"baseUrl": "src",
		"outDir": "dist",
		"rootDir": "src",
		"noEmit": false,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"noImplicitAny": false,
		"strictNullChecks": false,
		"paths": {
			"@8f4e/compiler": ["../compiler/src"],
			"@8f4e/2d-engine": ["../2d-engine/src"],
			"@8f4e/sprite-generator": ["../sprite-generator/src"],
			"@8f4e/compiler-worker": ["../compiler-worker/src"],
			"@8f4e/web-worker-midi-runtime": ["../web-worker-midi-runtime/src"],
			"@8f4e/audio-worklet-runtime": ["../audio-worklet-runtime/src"]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/types/**/*.d.ts"
	],
	"exclude": [
		"node_modules",
		"src/**/*.test.ts"
	]
} 