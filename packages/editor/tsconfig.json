{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"baseUrl": "src",
		"outDir": "dist",
		"rootDir": "src",
		"noEmit": false,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"noImplicitAny": false,
		"strictNullChecks": false
	},
	"include": [
		"src/**/*.ts",
		"src/types/**/*.d.ts"
	],
	"exclude": [
		"node_modules",
		"src/**/*.test.ts"
	]
} 