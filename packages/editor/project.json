{
  "name": "@8f4e/editor",
  "sourceRoot": "src",
  "projectType": "application",
  "implicitDependencies": ["@8f4e/state-manager"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "tsc",
        "cwd": "{projectRoot}"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --watch",
        "cwd": "{projectRoot}"
      }
    },
    "bundle": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/bundle"],
      "options": {
        "command": "vite build",
        "cwd": "{projectRoot}"
      },
      "dependsOn": ["^build"]
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "commands": [
          "tsc --noEmit --project tsconfig.test.json",
          "vitest run --config vitest.config.ts"
        ],
        "cwd": "{projectRoot}",
        "parallel": false
      }
    },
  "typecheck": {
    "executor": "nx:run-commands",
    "options": {
      "command": "tsc --noEmit",
      "cwd": "{projectRoot}"
    },
    "dependsOn": ["^build"]
  }
  },
  "tags": ["type:application", "scope:ui"]
}
