{
  "name": "8f4e",
  "version": "1.0.0",
  "description": "8f4e",
  "scripts": {
    "build": "npx nx run-many --target=build --all && vite build",
    "build:affected": "npx nx affected --target=build --base=main",
    "bundle:editor": "npx nx run editor:bundle",
    "dev": "concurrently \"npx nx run editor:build --watch\" \"vite\"",
    "lint": "npx eslint . --ext .ts --fix",
    "test": "npx nx run-many --target=test --all",
    "test:affected": "npx nx affected --target=test --base=main",
    "typecheck": "npx nx run-many --target=typecheck --all",
    "typecheck:affected": "npx nx affected --target=typecheck --base=main",
    "graph": "npx nx graph",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andorthehood/8f4e.git"
  },
  "author": "Andor Polgar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andorthehood/8f4e/issues"
  },
  "homepage": "https://github.com/andorthehood/8f4e#readme",
  "devDependencies": {
    "@nx/jest": "^21.4.1",
    "@nx/js": "^21.4.1",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.13.3",
    "@swc/jest": "^0.2.36",
    "@types/audioworklet": "^0.0.38",
    "@types/jest": "^30.0.0",
    "@types/jest-image-snapshot": "4.3.1",
    "@types/mocha": "^10.0.8",
    "@types/node": "^24.3.0",
    "@types/offscreencanvas": "2019.7.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "7.0.4",
    "jest": "^29.7.0",
    "jest-image-snapshot": "^6.5.1",
    "lint-staged": "12.1.4",
    "nx": "21.4.1",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vite-plugin-glsl": "^1.5.1",
    "vite-plugin-static-copy": "^3.1.2",
    "wabt": "^1.0.29"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix",
      "bash -c 'npm run typecheck'"
    ]
  },
  "dependencies": {
    "jest-environment-jsdom": "^30.1.1"
  }
}
