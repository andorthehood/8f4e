{
	"compilerOptions": {
		"lib": ["esnext", "dom", "dom.iterable"],
		"module": "esnext",
		"downlevelIteration": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strictNullChecks": true,
		"skipLibCheck": true
	},
	"exclude": ["node_modules", "packages/**/*", "src/**/*.test.ts"],
	"include": [
		"src/editor.ts",
		"src/index.ts",
		"src/examples/**/*.ts"
	]
}
