{
	"compilerOptions": {
		"lib": ["esnext", "dom", "dom.iterable"],
		"module": "esnext",
		"downlevelIteration": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"types": ["node"]
	},
	"exclude": ["node_modules", "src/**/*.test.ts"],
	"include": ["src/**/*.ts"],
}
