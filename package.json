{
  "name": "8f4e",
  "version": "1.0.0",
  "description": "8f4e",
  "scripts": {
    "preinstall": "git submodule update --init --recursive",
    "build": "npx nx run app:build",
    "build:affected": "npx nx affected --target=build --base=main",
    "bundle:editor": "npx nx run editor:bundle",
    "bundle:runtime-main-thread-logic": "npx nx run runtime-main-thread-logic:bundle",
    "dev": "npx nx run app:dev",
    "dev:watch-packages": "npx nx watch --all --includeDependentProjects -- npx nx run \\$NX_PROJECT_NAME:build",
    "lint": "npx eslint . --ext .ts --fix",
    "test": "npx nx run-many --target=test --all --exclude=@8f4e/web-ui --exclude=app",
    "test:affected": "npx nx affected --target=test --base=main",
    "test:screenshot": "npx nx run web-ui:test:screenshot",
    "test:screenshot:update": "npx nx run web-ui:test:screenshot:update",
    "test:screenshot:ui": "npx nx run web-ui:test:screenshot:ui",
    "typecheck": "npx nx run-many --target=typecheck --all",
    "typecheck:affected": "npx nx affected --target=typecheck --base=main",
    "graph": "npx nx graph",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andorthehood/8f4e.git"
  },
  "author": "Andor Polgar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andorthehood/8f4e/issues"
  },
  "homepage": "https://github.com/andorthehood/8f4e#readme",
  "devDependencies": {
    "@nx/js": "^21.4.1",
    "@nx/vite": "^21.6.5",
    "@playwright/test": "^1.56.1",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.13.3",
    "@types/audioworklet": "^0.0.38",
    "@types/mocha": "^10.0.8",
    "@types/node": "^24.3.0",
    "@types/offscreencanvas": "2019.7.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "7.0.4",
    "lint-staged": "12.1.4",
    "nx": "21.4.1",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "typescript": "^5.9.2",
    "vite": "^7.1.11",
    "vite-plugin-glsl": "^1.5.1",
    "vite-plugin-static-copy": "^3.1.2",
    "vitest": "^3.2.4",
    "wabt": "^1.0.29"
  },
  "workspaces": [
    "packages/*",
    "!packages/glugglug",
    "packages/*/*",
    "packages/*/*/*"
  ],
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix",
      "bash -c 'npm run typecheck'"
    ]
  }
}
