{
  "name": "@8f4e/editor-state",
  "sourceRoot": "src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "tsc --emitDeclarationOnly && vite build",
        "cwd": "{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "config": "{projectRoot}/vitest.config.ts",
        "reportsDirectory": "{workspaceRoot}/coverage/{projectRoot}"
      }
    },
    "test-update": {
      "executor": "@nx/vitest:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "config": "{projectRoot}/vitest.config.ts",
        "reportsDirectory": "{workspaceRoot}/coverage/{projectRoot}",
        "updateSnapshot": true
      }
    },
  "typecheck": {
    "executor": "nx:run-commands",
    "options": {
      "command": "tsc --noEmit",
      "cwd": "{projectRoot}"
    },
    "dependsOn": ["^build"]
  }
  },
  "tags": ["type:library", "scope:editor"]
}
