{
	"name": "@8f4e/cli",
	"projectType": "library",
	"sourceRoot": "src",
	"targets": {
		"build": {
			"executor": "nx:run-commands",
			"outputs": ["{projectRoot}/dist"],
			"options": {
				"command": "vite build && tsc -p tsconfig.build.json",
				"cwd": "{projectRoot}"
			}
		},
		"lint": {
			"executor": "nx:run-commands",
			"options": {
				"command": "eslint src --fix",
				"cwd": "{projectRoot}"
			}
		},
		"test": {
			"executor": "@nx/vitest:test",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"config": "{projectRoot}/vitest.config.ts",
				"reportsDirectory": "{workspaceRoot}/coverage/{projectRoot}"
			}
		},
		"typecheck": {
			"executor": "nx:run-commands",
			"options": {
				"command": "tsc --noEmit",
				"cwd": "{projectRoot}"
			}
		}
	},
	"tags": ["type:tooling", "scope:core"]
}
