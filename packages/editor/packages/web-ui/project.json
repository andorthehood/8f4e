{
  "name": "@8f4e/web-ui",
  "sourceRoot": "src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "tsc",
        "cwd": "{projectRoot}"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --watch",
        "cwd": "{projectRoot}"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "commands": [
          "tsc --noEmit --project tsconfig.test.json",
          "vitest run --config vitest.config.ts"
        ],
        "cwd": "{projectRoot}",
        "parallel": false
      }
    },
  "typecheck": {
    "executor": "nx:run-commands",
    "options": {
      "command": "tsc --noEmit",
      "cwd": "{projectRoot}"
    },
    "dependsOn": ["^build"]
  },
    "test:screenshot": {
      "executor": "nx:run-commands",
      "options": {
        "command": "playwright test",
        "cwd": "{projectRoot}"
      }
    },
    "test:screenshot:ui": {
      "executor": "nx:run-commands",
      "options": {
        "command": "playwright test --ui",
        "cwd": "{projectRoot}"
      }
    },
    "test:screenshot:update": {
      "executor": "nx:run-commands",
      "options": {
        "command": "playwright test --update-snapshots",
        "cwd": "{projectRoot}"
      }
    },
    "test:screenshot:headed": {
      "executor": "nx:run-commands",
      "options": {
        "command": "playwright test --headed",
        "cwd": "{projectRoot}"
      }
    },
    "test:screenshot:debug": {
      "executor": "nx:run-commands",
      "options": {
        "command": "playwright test --debug",
        "cwd": "{projectRoot}"
      }
    },
    "dev:test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vite --config screenshot-tests/vite.config.ts",
        "cwd": "{projectRoot}"
      }
    }
  },
  "tags": ["type:library", "scope:ui"]
}
