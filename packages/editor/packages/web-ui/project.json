{
  "name": "@8f4e/web-ui",
  "sourceRoot": "src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "tsc",
        "cwd": "{projectRoot}"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --watch",
        "cwd": "{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "config": "{projectRoot}/vitest.config.ts",
        "reportsDirectory": "{workspaceRoot}/coverage/{projectRoot}"
      }
    },
  "typecheck": {
    "executor": "nx:run-commands",
    "options": {
      "command": "tsc --noEmit",
      "cwd": "{projectRoot}"
    },
    "dependsOn": ["^build"]
  },
    "test:screenshot": {
      "executor": "nx:run-commands",
      "options": {
        "command": "playwright test",
        "cwd": "{projectRoot}"
      }
    },
    "test:screenshot:ui": {
      "executor": "nx:run-commands",
      "options": {
        "command": "playwright test --ui",
        "cwd": "{projectRoot}"
      }
    },
    "test:screenshot:update": {
      "executor": "nx:run-commands",
      "options": {
        "command": "playwright test --update-snapshots",
        "cwd": "{projectRoot}"
      }
    }
  },
  "tags": ["type:library", "scope:ui"]
}
