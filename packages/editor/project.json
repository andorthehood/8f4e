{
  "name": "@8f4e/editor",
  "sourceRoot": "src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "tsc",
        "cwd": "{projectRoot}"
      }
    },
    "bundle": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist/bundle"],
      "options": {
        "command": "vite build -c vite.config.bundle.ts",
        "cwd": "{projectRoot}"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "command": "jest",
        "cwd": "{projectRoot}"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "{projectRoot}"
      }
    }
  },
  "tags": ["type:application", "scope:ui"]
}