{
	"name": "@8f4e/examples",
	"sourceRoot": "src",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "nx:run-commands",
			"outputs": ["{projectRoot}/dist"],
			"options": {
				"command": "node --experimental-strip-types ./src/module-generators/generateModules.ts && tsc && mkdir -p dist/modules && cp src/modules/*.8f4e dist/modules/",
				"cwd": "{projectRoot}"
			}
		},
		"lint": {
			"executor": "nx:run-commands",
			"options": {
				"command": "eslint src --fix",
				"cwd": "{projectRoot}"
			}
		},
		"dev": {
			"executor": "nx:run-commands",
			"options": {
				"command": "node --experimental-strip-types ./src/module-generators/generateModules.ts && tsc --watch",
				"cwd": "{projectRoot}"
			}
		},
		"typecheck": {
			"executor": "nx:run-commands",
			"options": {
				"command": "tsc --noEmit",
				"cwd": "{projectRoot}"
			},
			"dependsOn": ["^build"]
		}
	},
	"tags": ["type:library", "scope:examples"]
}
