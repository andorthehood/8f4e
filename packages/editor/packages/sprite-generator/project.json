{
  "name": "@8f4e/sprite-generator",
  "sourceRoot": "src",
  "projectType": "library",
  "targets": {
    "generate-fonts": {
      "executor": "nx:run-commands",
      "outputs": [
        "{projectRoot}/src/fonts/8x16/generated",
        "{projectRoot}/src/fonts/6x10/generated"
      ],
      "options": {
        "command": "node tools/generate-font-bitmaps.mjs",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "dependsOn": ["^build", "generate-fonts"],
      "options": {
        "command": "tsc",
        "cwd": "{projectRoot}"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build", "generate-fonts"],
      "options": {
        "command": "tsc --watch",
        "cwd": "{projectRoot}"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "dependsOn": ["generate-fonts"],
      "options": {
        "commands": [
          "tsc --noEmit --project tsconfig.test.json",
          "vitest run --config vitest.config.ts"
        ],
        "cwd": "{projectRoot}",
        "parallel": false
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build", "generate-fonts"],
      "options": {
        "command": "tsc --noEmit",
        "cwd": "{projectRoot}"
      }
    },
    "test:screenshot": {
      "executor": "nx:run-commands",
      "options": {
        "command": "playwright test",
        "cwd": "{projectRoot}"
      }
    },
    "test:screenshot:ui": {
      "executor": "nx:run-commands",
      "options": {
        "command": "playwright test --ui",
        "cwd": "{projectRoot}"
      }
    },
    "test:screenshot:update": {
      "executor": "nx:run-commands",
      "options": {
        "command": "playwright test --update-snapshots",
        "cwd": "{projectRoot}"
      }
    },
    "test:screenshot:headed": {
      "executor": "nx:run-commands",
      "options": {
        "command": "playwright test --headed",
        "cwd": "{projectRoot}"
      }
    },
    "test:screenshot:debug": {
      "executor": "nx:run-commands",
      "options": {
        "command": "playwright test --debug",
        "cwd": "{projectRoot}"
      }
    },
    "dev:test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vite --config screenshot-tests/vite.config.ts",
        "cwd": "{projectRoot}"
      }
    }
  },
  "tags": ["type:library", "scope:graphics"]
}